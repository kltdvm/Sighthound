.ImageUpload
  margin-bottom: 1em

  .ComponentHeader
    position: relative

    h6
      font-weight: 500

    span
      position: absolute
      right: 0
      top: 5px
      font-size: 10px
      color: gray


.imageInputs
  display: flex
  flex-flow: row
  justify-content: space-between
  width: 100%
  padding: 0
  margin: 0

  img
    border: 5px solid #fff
    height: auto

  > div
    width: 25%
    flex: 1 0 auto
    margin-right: 8px

    &:last-of-type
      margin-right: 0

    // &:before
    //   content: ''
    //   float: left
    //   padding-top: 100%

.imageUploadInput
  width: 100%
  height: 0
  padding-bottom: 100%
  border: 0
  background-image: url('/images/upload.png')
  background-size: contain
  background-repeat: no-repeat

  &:disabled
    background: transparent
    border: 1px dashed darken(#e0e0e0, 15%)
  
.placeholder
  position: absolute
  color: $secondary
