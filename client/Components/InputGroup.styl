.InputGroup
  background: #fff
  margin-bottom: 1em
  padding: 1em 1em 0.5em
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(0, 0, 0, 0.12)
  height: 55px
  overflow: hidden
  transition: padding-bottom 350ms ease

  &.expanded
    padding-bottom: 40%
