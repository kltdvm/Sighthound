.Dropdown
  background: transparent
  z-index: 100
  height: 80px

  .mdl-textfield__label
    i
      position: absolute
      right: 5px
      top: 0
  
  select, .Dropdown-root
    background: transparent
    border: none
    border-bottom: 1px solid $light-gray
    position: absolute
    top: 24px
    left: 0
    width: 92%
    padding: 0
    color: $dark-gray

    &:focus, &.is-open
      // border-bottom: 2px solid rgb(63,81,181)
      color: rgb(63,81,181)

      .Dropdown-menu
        border-top: 2px solid rgb(63,81,181)

      .Dropdown-placeholder
        color: rgb(63,81,181)

  .Dropdown-placeholder
    height: 35px
  
  .Dropdown-menu
    width: 100%
    background: #fff
    box-shadow: 2px 2px 2px rgba(0,0,0,0.2)

    .Dropdown-option
      color: #000
      height: 44px
      line-height: 44px
      padding: 0 1em

      &:hover, &:focus, &:active
        background: $light-gray
        color: rgb(63,81,181)